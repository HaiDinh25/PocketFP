<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_5dp" />
            <gradient
                android:angle="180"
                android:centerColor="#668FD6"
                android:endColor="#2B32B2"
                android:startColor="#1488CC" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/width_1.5dp"
        android:left="@dimen/width_1.5dp"
        android:right="@dimen/width_1.5dp"
        android:top="@dimen/width_1.5dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_5dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>