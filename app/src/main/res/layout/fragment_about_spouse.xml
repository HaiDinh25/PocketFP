<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!--        <variable-->
        <!--            name=""-->
        <!--            type="" />-->
    </data>

    <RelativeLayout
        style="@style/ViewMatchParent"
        android:padding="@dimen/padding_larger">

        <ScrollView
            style="@style/ViewMatchParent"
            android:layout_above="@id/layoutButton">

            <LinearLayout
                style="@style/ViewMatchParent"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewBlack"
                    android:text="@string/about_spouse_birth_day" />

                <LinearLayout
                    style="@style/ViewMatchWidth"
                    android:layout_marginTop="@dimen/margin_large"
                    android:orientation="horizontal">

                    <View
                        style="@style/TextViewBlack"
                        android:layout_width="0dp"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/TextViewBlack"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:background="@drawable/bg_gray_border"
                        android:padding="@dimen/padding_large"
                        android:text="@string/guarantee_birth_day_hint" />

                </LinearLayout>

                <TextView
                    style="@style/TextViewBlack"
                    android:layout_marginTop="@dimen/margin_large"
                    android:drawablePadding="@dimen/padding_medium"
                    android:gravity="center"
                    android:text="@string/about_spouse_past_ex"
                    app:drawableEndCompat="@drawable/ic_help" />

                <LinearLayout
                    style="@style/ViewMatchWidth"
                    android:layout_marginTop="@dimen/margin_large"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextViewGray"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/guarantee_office_civil" />

                    <LinearLayout
                        style="@style/ViewMatchWidth"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewGray"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@drawable/bg_gray_border"
                            android:padding="@dimen/padding_large"
                            android:text="@string/guarantee_ex_year" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            style="@style/ViewMatchWidth"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_weight="1.5">

                            <TextView
                                android:id="@+id/tvRecent"
                                style="@style/TextViewGray"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_gray_border"
                                android:padding="@dimen/padding_large"
                                android:text="@string/guarantee_recent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                style="@style/TextViewGray"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:text="@string/guarantee_yen"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/tvRecent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/ViewMatchWidth"
                    android:layout_marginTop="@dimen/margin_large"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextViewGray"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/guarantee_self_employed" />

                    <LinearLayout
                        style="@style/ViewMatchWidth"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewGray"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@drawable/bg_gray_border"
                            android:padding="@dimen/padding_large"
                            android:text="@string/guarantee_ex_year" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            style="@style/ViewMatchWidth"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_medium"
                            android:layout_weight="1.5">

                            <TextView
                                android:id="@+id/tvRecent2"
                                style="@style/TextViewGray"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_gray_border"
                                android:padding="@dimen/padding_large"
                                android:text="@string/guarantee_recent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                style="@style/TextViewGray"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:text="@string/guarantee_yen"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/tvRecent2" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/ViewMatchWidth"
                    android:layout_marginTop="@dimen/margin_large"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextViewGray"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/guarantee_house_wife" />

                    <LinearLayout
                        style="@style/ViewMatchWidth"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewGray"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@drawable/bg_gray_border"
                            android:padding="@dimen/padding_large"
                            android:text="@string/guarantee_ex_year" />

                        <View
                            style="@style/ViewMatchWidth"
                            android:layout_width="0dp"
                            android:layout_weight="1.5" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    style="@style/TextViewBlack"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@string/about_spouse_current_occupation" />

                <LinearLayout
                    style="@style/ViewMatchWidth"
                    android:layout_marginTop="@dimen/margin_large"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextViewBlack"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1" />

                    <LinearLayout
                        style="@style/ViewMatchWidth"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextViewGray"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:background="@drawable/bg_gray_border"
                            android:padding="@dimen/padding_large"
                            android:text="@string/about_spouse_occupation_hint" />

                        <View
                            style="@style/ViewMatchWidth"
                            android:layout_width="0dp"
                            android:layout_weight="1.5" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/layoutButton"
            style="@style/ViewMatchWidth"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonBack"
                style="@style/ButtonBack" />

            <Button
                android:id="@+id/buttonNext"
                style="@style/ButtonNext"
                android:layout_marginStart="@dimen/margin_largest" />

        </LinearLayout>

    </RelativeLayout>

</layout>
